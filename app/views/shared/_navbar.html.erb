<div class="navbar navbar-expand-sm navbar-light navbar-lewagon navbar-padding">  
  
  <%= link_to image_tag("logo.png"), root_path, class: "navbar-brand" %>
  
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item padding-navbar">
        <div class="hover-border-bottom">
          <%= link_to "Home", root_path, class: "nav-link" %>
        </div>
      </li>
      <li class="nav-item padding-navbar">
        <div class="hover-border-bottom">
          <%= link_to "Browse dogs", dogs_path, class: "nav-link" %>
        </div>
      </li>
      <li class="nav-item padding-navbar">
        <div class="hover-border-bottom">
          <%= link_to "Add a dog", new_dog_path, class: "nav-link"  %>
        </div>
      </li>
      <li class="padding-navbar nav-item">
        <div class="hover-border-bottom">
      <% if user_signed_in? %>
          <%= link_to "Profile", profile_path, class: "nav-link" %>
          <% else %>
          <%= link_to "Log in", new_user_session_path, class: "nav-link" %>
          <% end %>
        </div>
      </li>
      <li class="nav-item dropdown">
        <div>
          <% if user_signed_in? %>
          <img class="avatar dropdown-toggle" id="navbarDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" src=<%= current_user.profile_photo %> />
          <% end %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <% if user_signed_in? %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
            <%  else %>
            <%= link_to "Log in", new_user_session_path, class: "dropdown-item" %>
            <% end %>
          </div>
        </div>
      </li>
    </ul>
  </div>
</div>

